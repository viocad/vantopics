<% include ../partials/admin-header %>

    <div class="container border">
        
        <form id="postForm" action="/posts" method="POST">
            
            <h2>寫新文章</h2>
            
            <div class="form-group">
                <label for="title">標題</label>
                <input type="text" class="form-control" name="post[title]" required>
            </div>
            
            <div class="form-group">
                <label for="category">分類</label>
                <select name="category" class="form-control">
                    <option value="" selected="selected"></option>
                    <% categories.forEach(function(category){ %>
                        <option value="<%= category._id %>"><%= category.name %></option>
                    <% }); %>
                </select>
            </div>
            
            <div class="form-inline">
                <div class="form-group">
                    <label class="mb-2" for="date">日期</label>
                    <input type="text" class="form-control mx-sm-2 mb-2" name="date[year]" value=<%= date.getFullYear() %>>
                    <input type="text" class="form-control mx-sm-2 mb-2" name="date[month]" value=<%= date.getMonth()+1 %>>
                    <input type="text" class="form-control mx-sm-2 mb-2" name="date[day]" value=<%= date.getDate() %>>
                </div>
            </div>

            <div class="form-group">
                <label for="content">內容</label>
                <textarea id="tiny" class="form-control" name="post[content]" rows="20"></textarea>
            </div>
            
            <button type="submit" class="btn btn-success">發佈</button>
            <a href="/admin" class="btn btn-danger">取消</a>
            
        </form>

        
    </div>

<% include ../partials/admin-footer %>