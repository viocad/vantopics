<% include ../partials/admin-header %>

    <div class="container border">
        
        <form id="postForm" action="/posts" method="POST">
            
            <h2>寫新文章</h2>
            
            <div class="form-group">
                <label for="title">標題</label>
                <input type="text" class="form-control" name="post[title]" required>
            </div>
            
            <div class="form-group">
                <label for="category">分類</label>
                <select name="category" class="form-control col-6">
                    <option value="" selected="selected"></option>
                    <% categories.forEach(function(category){ %>
                        <option value="<%= category._id %>"><%= category.name %></option>
                    <% }); %>
                </select>
            </div>
            
            <div class="form-group">
                <label for="featuredImage">標題圖像鏈接</label>
                <input type="text" class="form-control" name="post[featuredImage]">
            </div>
            
            <div class="form-group">
                <label class="mb-2" for="date">日期</label>
                <div class="form-inline">
                    <input type="text" class="form-control col-2 mr-sm-2 mb-2" name="date[year]" value=<%= date.getFullYear() %>>年
                    <input type="text" class="form-control col-2 mx-sm-2 mb-2" name="date[month]" value=<%= date.getMonth()+1 %>>月
                    <input type="text" class="form-control col-2 mx-sm-2 mb-2" name="date[day]" value=<%= date.getDate() %>>日
                </div>
            </div>
            
            <div class="form-group">
                <label class="radio-inline mr-sm-2" for="draft">草稿</label>
                    <input type="radio" name="post[draft]" value="1">
                <label class="radio-inline mx-sm-2" for="draft">發佈</label>
                    <input type="radio" name="post[draft]" checked value="0">
            </div>

            <div class="form-group">
                <label for="content">內容</label>
                <textarea id="tiny" class="form-control" name="post[content]" rows="20"></textarea>
            </div>
            
            <button type="submit" class="btn btn-success">發佈</button>
            <a href="/admin" class="btn btn-danger">取消</a>
            
        </form>

        
    </div>

<% include ../partials/admin-footer %>