<% include ../partials/admin-header %>

    <div class="container border">
        
        <form id="categoryForm" action="/admin/categories" method="POST">
            
            <h1>創建新文章分類</h1>
            
            <div class="form-group">
                <label for="name">名稱</label>
                <input type="text" class="form-control" name="category[name]" required>
            </div>
            
            <div class="form-group">
                <label for="description">簡介</label>
                <textarea class="form-control" name="category[description]" rows="5"></textarea>
            </div>
            
            <button type="submit" class="btn btn-success">創建</button>
            <a href="/posts/categories" class="btn btn-danger">取消</a>
            
            
        </form>

        
    </div>

<% include ../partials/admin-footer %>