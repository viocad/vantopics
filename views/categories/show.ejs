<% include ../partials/admin-header %>

<div class="row">
    <div class="col">
        <h4><%= posts[0].category.name %>的文章</h4> 
    </div>
    <div class="col" align="right">
        <a href="/admin/categories/<%= posts[0].category.id %>/edit">編輯分類</a>
    </div>
</div>

<div class="table-responsive">
    <table class="table table-hover">
        <thead>
            <th>標題</th>
            <th>分類</th>
            <th>發佈日期</th>
            <th>作者</th>
        </thead>
        <tbody>
            <% posts.forEach(function(post){ %>
                <tr>
                    <td><a href="/posts/<%= post._id %>"><%= post.title %></a></td>
                    <td><a href="/admin/categories/<%= post.category.id %>"><%= post.category.name %></a></td>
                    <td><%= post.createdAt.getFullYear() %>.<%= post.createdAt.getMonth()+1 %>.<%= post.createdAt.getDate() %></td>
                    <td><%= post.author.username %></td>
                </tr>
            <% }); %>
        </tbody>
    </table>
</div>

<% include ../partials/admin-footer %>