<% include ../partials/admin-header %>

    <div class="container border">
        
        <form id="categoryForm" action="/admin/categories/<%= category._id %>?_method=PUT" method="POST">
            
            <h2>編輯 <%= category.name %></h2>
            
            <div class="form-group">
                <label for="name">名稱</label>
                <input type="text" class="form-control" name="category[name]" value="<%= category.name %>" required>
            </div>
            
            <div class="form-group">
                <label for="description">簡介</label>
                <textarea class="form-control" name="category[description]" rows="5"><%= category.description %></textarea>
            </div>
            
            <button type="submit" class="btn btn-success">編輯</button>
            <a href="/admin/categories" class="btn btn-danger">取消</a>
            
            
        </form>

        
    </div>

<% include ../partials/admin-footer %>